{% extends "GGGGinoSkuskuCartBundle::layout.html.twig" %}

{% block body %}
    <div class="page-title">
        <div class="title_left">
            <h3> Media Gallery <small> gallery design</small> </h3>
        </div>

        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12">
            {{ render_preview_cart() }}
            <div class="x_panel">
                <div class="x_title">
                    <h2>Media Gallery <small> gallery design </small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Settings 1</a>
                                </li>
                                <li><a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">

                    <div class="row">

                        <p>Media gallery design emelents</p>


                        {% for productForm in productsForms %}
                            {% set product = productForm.product %}
                            {% set form = productForm.form %}

                            <div class="col-md-55">
                                <div class="">
                                    <div class="image view view-first">
                                        <img style="width: 100%; display: block;" src="https://www.atipicishop.com/19307-thickbox_default/r.jpg" alt="image" />
                                        <div class="mask">
                                            <p>Your Text</p>
                                            <div class="tools tools-bottom">
                                                <a href="#"><i class="fa fa-link"></i></a>
                                                <a href="#"><i class="fa fa-pencil"></i></a>
                                                <a href="#"><i class="fa fa-times"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="caption">
                                        <h1>{{ product.id }}</h1>
                                        Description: {{ product.description }}<br/>
                                        Price: {{ product.price }}<br/>
                                        From: {{ product.getAvailableFrom|date('d/m/Y') }}<br/>
                                        To: {{ product.availableTo|date('d/m/Y') }}<br/><br/>
                                        {% include "GGGGinoSkuskuCartBundle:Cart:add_to_cart.html.twig" with {addToCartForm: form} %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}